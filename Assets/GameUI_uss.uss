.grid {
    padding-top: 2px;
    padding-right: 2px;
    padding-bottom: 2px;
    padding-left: 2px;
}

.cell {
    margin-left: 2px;
    margin-right: 2px;
    width: 50px;
    height: 50px;
    padding-left: 0;
    padding-right: 0;
    padding-top: 0;
    padding-bottom: 0;
    margin-top: 0;
    margin-bottom: 0;
    flex-grow: 0;
}

.background {
}

.header {
    height: 150px;
    flex-grow: 0;
    flex-shrink: 1;
    background-color: rgb(108, 108, 108);
}

.footer {
    background-color: rgb(108, 108, 108);
    flex-grow: 1;
    max-height: 50px;
}

.row {
    padding-left: 0;
    padding-right: 0;
    flex-direction: row;
    align-items: flex-start;
    justify-content: center;
    padding-top: 0;
    padding-bottom: 0;
    margin-top: 2px;
    margin-bottom: 2px;
}

.cell-mine {
    background-color: rgb(129, 22, 22);
}

.cell-flagged {
    background-color: rgb(197, 155, 44);
}

.cell-empty {
    background-color: rgb(128, 128, 128);
}
